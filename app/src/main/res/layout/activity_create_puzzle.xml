<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techandrosion.puzzle.CreatePuzzleActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.rp.puzzle.view.PuzzleView
            app:pv_borderColor="@color/colorPrimaryDark"
            app:pv_borderSize="2"
            android:layout_margin="5dp"
            android:id="@+id/puzzle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.rp.puzzle.view.PuzzleView>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_grid_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/grid_size"
                android:textColor="@color/primary_text"
                android:textSize="15sp" />

            <SeekBar
                android:id="@+id/sb_grid_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:max="8" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
